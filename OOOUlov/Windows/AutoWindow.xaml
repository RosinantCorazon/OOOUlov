<Window x:Class="OOOUlov.Windows.AutoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOOUlov.Windows"
        mc:Ignorable="d"
        Title="ООО Улов - Авторизация" Height="250" Width="400" MinHeight="250" MinWidth="400">
    <Grid>
        <Label Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="26"/>
        <Label Content="Логин" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,200,0"/>
        <TextBox Name="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="60,0,0,0"/>
        <Label Content="Пароль" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,70,200,0"/>
        <TextBox Name="Password" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="60,70,0,0"/>
        <Button Content="Войти" Width="70" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,170,170,0" Name="LogUserBtn" Click="LogUserBtn_Click"/>
        <Button Content="Войти как гость" Width="120" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="170,170,00,0" Name="LogGuestBtn" Click="LogGuestBtn_Click" />
    </Grid>
</Window>
